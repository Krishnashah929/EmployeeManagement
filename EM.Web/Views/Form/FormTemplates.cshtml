@model EM.Entity.Forms
@{
    Layout = "_LayoutUsers";
}
@{
    ViewData["Title"] = "Form Templates";
}
<style>
    .dot {
        height: 90px;
        width: 90px;
        background-color: #707fb7;
        border-radius: 50%;
        display: inline-block;
        padding-top: 30px;
        margin-left: 125px;
        color: white;
    }
</style>

<!-- Open Create form model -->
<div class="modal fade" id="idCreateForm">
    <div class="modal-dialog modal-dialog-centered">
    </div>
</div>

<!-- Content Header (Page header) -->
<div class="container-fluid">
    <div class="row ">
        <div class="col">
            <h3 class="mt-3 ml-3 font-weight-bold">Form Templates</h3>
        </div>
        <div class="col text-right">
            <button type="button" class="btn btn-info mt-3 mb-3" data-toggle="modal" data-target="#idCreateForm" onclick="fnOpenCreateForm(this)">
                <b> + </b>  Create Form
            </button>
        </div>
    </div>

    <div class="card">
        <!--Inline form for searching forms-->
        <div class="card bg-light mt-3 ml-3 mr-3 ">
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="idFormName" placeholder="Form Name" onkeydown="return /[a-z]/i.test(event.key)">
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="email" class="form-control" id="idDestinationEmail" placeholder="Destination Email" onkeydown="return /[a-z]/i.test(event.key)">
                                </div>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-group">
                                <div class="form-check mt-2">
                                    <label class="form-check-label font-weight-bold" for="idIsActive">
                                        <input type="checkbox" id="idIsActive" name="">
                                        Active
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-group">
                                <div class="form-check mt-2">
                                    <label class="form-check-label font-weight-bold" for="idCreatedBySelf">
                                        <input type="checkbox" id="idCreatedBySelf" name="">
                                        Created By Self
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-2 text-sm-right">
                            <button type="button" class="btn btn-primary" onclick="fnSearchForms(this)"> <i class="fas fa-search"></i>  Search  </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!--Inline form for searching forms-->
        <!--Card for geeting all forms -->
        <div id="idCards" class="row"></div>
        <!--Card for geeting all forms -->
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        fnGetAllForms();
    });

    //For open create form model
    function fnOpenCreateForm() {
        $.ajax({
            url: '@Url.Content("~/Form/OpenCreateForm")',
            data: { "id": 0 },
            type: 'GET',
            success: function (response) {
                $('#idCreateForm').find(".modal-dialog").html(response);
                $('#idCreateForm').modal("show");
            }
        });
    }

    //For open edit user model
    function fnEditForm(formId) {
        debugger;
        var id = formId;
        $.ajax({
            url: '@Url.Content("~/Form/OpenCreateForm")',
            type: 'GET',
            data: { "id": id },
            success: function (response) {
                $('#idCreateForm').find(".modal-dialog").html(response);
                $('#idCreateForm').modal("show");
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    //Get all forms in card format
    function fnGetAllForms() {
        $.ajax({
            type: 'GET',
            url: '@Url.Content("~/Form/GetAllForms")',
            success: function (response) {
                if (response != null && response != undefined && response.length > 0) {
                    var appendHtml = $("#idCards");
                    appendHtml.html("");
                    for (var i = 0; i < response.length; i++) {
                        var activeInactiveString = "";
                        if (response[i].isActive)
                        {
                            activeInactiveString = `<h5 class="text-success text-center">Active</h5>`;
                        }
                        else
                        {
                            activeInactiveString = `<h5 class="text-danger text-center">In Active</h5>`;
                        }
                        var htmlText = `<div id="idCard" class="card card-secondary shadow-sm mt-3 mr-3 col-md-3 border" style= "margin-left:95px;"">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <h3 class="text-center font-weight-bold dot" id="formShortName">${response[i].formName.substring(0,2).toUpperCase()}</h3>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <h3 class="text-center font-weight-bold" id="formName">${response[i].formName}</h3>
                                    </div>
                                </div>
                                <div class="row">
                                <div class="col" id="activeInActive">
                                                    ${ activeInactiveString }
                                </div>
                                </div>
                                <div class="row justify-content-between">
                                    <a class="text-black" href="ManageFields/${response[i].formId}"> <i class="fas fa-list"></i>  Manage Feilds </a>
                                    <a class="text-black" href="#" onclick="fnEditForm(${response[i].formId});"> <i class="fas fa-pen"></i>  Edit Form</a>
                                </div>
                                <div class="row justify-content-center mt-2">
                                    <a class="" href="#"> <i class="fas fa-download"></i> Import Fields </a>
                                </div>
                            </div>`;

                        appendHtml.append(htmlText);
                    }
                }
            }
        });
    }

    //For search forms
    function fnSearchForms() {
        debugger;
        var data = {};
        data.formName = document.getElementById("idFormName").value;
        data.destinationEmail = document.getElementById("idDestinationEmail").value;
        var active = document.getElementById("idIsActive");
        data.isActive = false;
        if (active.checked)
        {
            data.isActive = true;
        }
        var createdByself = document.getElementById("idCreatedBySelf");
        data.createdBy = false;
        if (createdByself.checked)
        {
            data.createdBy = true;
        }
        $.ajax({
            type: 'POST',
            url: '/Form/SearchForms',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            data: data,
            success: function (response) {
                if (response != null && response != undefined && response.length > 0) {
                    var appendHtml = $("#idCards");
                    appendHtml.html("");
                    for (var i = 0; i < response.length; i++) {
                        var activeInactiveString = "";
                        if (response[i].isActive) {
                            activeInactiveString = `<h5 class="text-success text-center">Active</h5>`;
                        }
                        else {
                            activeInactiveString = `<h5 class="text-danger text-center">In Active</h5>`;
                        }
                        var htmlText = `<div id="idCard" class="card card-secondary shadow-sm mt-3 mr-3 col-md-3 border" style= "margin-left:95px;"">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <h3 class="text-center font-weight-bold dot" id="formShortName">${response[i].formName.substring(0, 2).toUpperCase()}</h3>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <h3 class="text-center font-weight-bold" id="formName">${response[i].formName}</h3>
                                    </div>
                                </div>
                                <div class="row">
                                <div class="col" id="activeInActive">
                                                    ${activeInactiveString}
                                </div>
                                </div>
                                <div class="row justify-content-between">
                                    <a class="text-black" href="ManageFields/${response[i].formId}"> <i class="fas fa-list"></i>  Manage Feilds </a>
                                    <a class="text-black" onclick="fnEditForm(${response[i]});"> <i class="fas fa-pen"></i>  Edit Form</a>
                                </div>
                                <div class="row justify-content-center mt-2">
                                    <a class="" href="#"> <i class="fas fa-download"></i> Import Fields </a>
                                </div>
                            </div>`;

                        appendHtml.append(htmlText);
                    }
                }
            }
        });
    }
</script>