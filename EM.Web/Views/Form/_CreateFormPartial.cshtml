@model EM.Entity.Forms
<!-- /.modal-content -->
<div class="modal-content">
    <div class="modal-header  bg-info">
        <h4 class="modal-title">Create Form </h4>
    </div>
    <div class="modal-body">
        <form id="frmCreateForm" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <input asp-for="FormId" hidden class="form-control" id="idFormId" />
            <div class="form-group">
                <label>Form Name : </label>
                <div class="input-group">
                    <input type="text" asp-for="FormName" class="form-control" id="idFormName" placeholder="Form Name" onkeydown="return /[a-z]/i.test(event.key)">
                </div>
                <span asp-validation-for="FormName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Destination Email :</label>
                <div class="input-group">
                    <input type="email" asp-for="DestinationEmail" class="form-control" id="idDestinationEmail" placeholder="Destination Email">
                </div>
                <span asp-validation-for="DestinationEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label asp-for="IsActive" class="form-check-label" for="idIsActive">
                        <input asp-for="IsActive" type="checkbox" id="idIsActive" name="">
                        Active
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                @if (Model.FormId == 0)
                {
                    <button type="submit" class="btn btn-primary">  <i class="fas fa-save"></i> Save</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary">  <i class="fas fa-save"></i> Update</button>
                }
                <button type="button" class="btn btn-default" data-dismiss="modal"> <i class="fas fa-times"></i>  Close</button>
            </div>
        </form>
    </div>
</div>
<!-- /.modal-content -->

<script type="text/javascript">
    $("#frmCreateForm").submit(function (event)
    {
        debugger;
        $.validator.setDefaults({
            ignore: ':hidden, [readonly=readonly]'
        });
        var data = {};
        data.formId = document.getElementById("idFormId").value;
        data.formName = document.getElementById("idFormName").value;
        data.destinationEmail = document.getElementById("idDestinationEmail").value;
        var active = document.getElementById("idIsActive");
        data.isActive = false;
        if (active.checked)
        {
            data.isActive = true;
        }

        var $form = $('#frmCreateForm');
        $.validator.unobtrusive.parse($form);

        if ($("#frmCreateForm").valid())
        {
            event.preventDefault();
            event.stopImmediatePropagation();
            $.ajax({
                url: '@Url.Content("~/Form/CreateForm")',
                type: "POST",
                async: true,
                data: data,
                //data: $("#frmCreateForm").serialize(),
                success: function (result)
                {
                    debugger;
                    if (result != null && result.statusCode != 200)
                    {
                        toastr.error(result.message);
                        $('#idCreateForm').modal("show");
                    }
                    else
                    {
                        toastr.success(result.message);
                        fnGetAllForms();
                        $('#idCreateForm').modal("hide");
                      
                    }
                    console.log(result);
                },
                error: function (ex)
                {
                    toastr.error('Invalid Data.');
                    console.log('Failed ');
                }
            });
        }
        else
        {
            event.preventDefault();
            event.stopImmediatePropagation();
        }
    });

        //Get all forms in card format
    function fnGetAllForms() {
        $.ajax({
            type: 'GET',
            url: '@Url.Content("~/Form/GetAllForms")',
            success: function (response) {
                if (response != null && response != undefined && response.length > 0) {
                    var appendHtml = $("#idCards");
                    appendHtml.html("");
                    for (var i = 0; i < response.length; i++) {
                        var activeInactiveString = "";
                        if (response[i].isActive)
                        {
                            activeInactiveString = `<h5 class="text-success text-center">Active</h5>`;
                        }
                        else
                        {
                            activeInactiveString = `<h5 class="text-danger text-center">In Active</h5>`;
                        }
                        var htmlText = `<div id="idCard" class="card card-secondary shadow-sm mt-3 mr-3 col-md-3 border" style= "margin-left:95px;"">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <h3 class="text-center font-weight-bold dot" id="formShortName">${response[i].formName.substring(0,2).toUpperCase()}</h3>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <h3 class="text-center font-weight-bold" id="formName">${response[i].formName}</h3>
                                    </div>
                                </div>
                                <div class="row">
                                <div class="col" id="activeInActive">
                                                    ${ activeInactiveString }
                                </div>
                                </div>
                                <div class="row justify-content-between">
                                    <a class="text-black" href="ManageFields/${response[i].formId}"> <i class="fas fa-list"></i>  Manage Feilds </a>
                                    <a class="text-black" href="#" onclick="fnEditForm(${response[i].formId});"> <i class="fas fa-pen"></i>  Edit Form</a>
                                </div>
                            </div>`;

                        appendHtml.append(htmlText);
                    }
                }
            }
        });
    }
</script>