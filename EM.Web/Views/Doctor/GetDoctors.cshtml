@{
    Layout = "_LayoutUsers";
}
@{
    ViewData["Title"] = "Doctor's Index Page";
}
 
@if (User.Identity.IsAuthenticated)
{
    <div aria-hidden="true" aria-labelledby="EdiDoctors" role="dialog" tabindex="-1" id="EdiDoctors" class="modal fade">
        <div class="modal-dialog modal-dialog-centered">
        </div>
    </div>
    <div class="container-fluid">
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header">
                        <div class="row">
                            <div class="col">
                                <h3 class="card-title mt-1">  Welcome, List of Doctors</h3>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="idDoctorTable" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    <th>Pincode</th>
                                    <th>Address</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    $(document).ready(function () {
        GetDoctorsList();
    });
    //for getting userlist.
    function GetDoctorsList() {
        $('#idDoctorTable').DataTable(
            {
                ajax: {
                    url:'@Url.Content("GetDoctorsList")',
                    type: "POST",
                },
                destroy: true,
                "paging": true,
                "searching": true,
                "info": true,
                "lengthChange": false,
                "responsive": true,
                "processing": true,
                "serverSide": true,

                columns: [
                    { data: "firstName", name: "FirstName" }, //index-0
                    { data: "lastname", name: "lastname" },//index- 1
                    { data: "emailAddress", name: "EmailAddress" },//index- 2
                    { data: "phoneNumber", name: "PhoneNumber" }, //index- 3
                    { data: "pincode", name: "Pincode" },//index- 4
                    { data: "address", name: "Address" },//index- 5
                    {
                        //adds td row for button
                        data: null,
                        render: function (data) {
                            return "<a href='#' class='btn btn-info m-auto' data-toggle='model' data-target=#EdiDoctors' onclick=editDoctor('" + data.doctorId + "'); >Edit</a>";
                        } //index- 6
                    },
                ],
                'columnDefs': [{
                    'targets': [6], // column index (start from 0)
                    'orderable': false, // set orderable false for selected columns
                }]
            }
        );
    }
 
    //For open edit doctor model
    function editDoctor(doctorId, userId) {
        debugger;
        var id = doctorId;
        var userId = userId;
        $.ajax({
            url: '@Url.Content("~/Doctor/EditDoctorsModel")',
            type: 'GET',
            data: { "id": id},
            success: function (response) {
                $('#EdiDoctors').find(".modal-dialog").html(response);
                $('#EdiDoctors').modal("show");
            },
            error: function (error) {
                console.log(error);
            }
        });
    }
</script>
