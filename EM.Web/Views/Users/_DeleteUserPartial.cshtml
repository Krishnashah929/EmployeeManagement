@model EM.Entity.User

<div class="modal-content">
    <!-- Modal Header -->
    <div class="modal-header">
        <h3 class="modal-title m-auto text-secondary">
            <b> Delete User Details </b>
        </h3>
    </div>
    <!-- Modal body -->
    <div class="modal-body">
        <form id="idDeletDetails">
            <div class="row">
                <div class="col">
                    <input type="hidden" asp-for="UserId" class="form-control" id="id" value="@Model.UserId" />
                    <p class="text-center">
                        Are you sure you want to delete this user?
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <button type="button" class="btn btn-danger text-center m-auto" onclick="DeleteUser()">
                        Delete
                    </button>
                </div>
            </div>
            <br>
        </form>
    </div>
</div>
